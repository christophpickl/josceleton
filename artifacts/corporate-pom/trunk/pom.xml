    <!-- ******************************************************************* -->
    <!--                              B U I L D                              -->
    <!-- ******************************************************************* -->
    
    <build>
    	<pluginManagement>
    		<plugins>
    			
				<plugin>
					<artifactId>maven-deploy-plugin</artifactId>
					<version>2.5</version>
				</plugin>
				
				<plugin>
					<artifactId>maven-release-plugin</artifactId>
					<version>2.1</version>
				</plugin>
				
				<!-- no maven3 switch (to 2.2) necessary, as maven 3.0 as prerequisite nevertheless -->
            	<plugin>
            		<artifactId>maven-site-plugin</artifactId>
            		<version>3.0-beta-3</version>
            	</plugin>
            	
            	<!-- LUXURY @POM DEPLOY do we need to sign our jars with gpg? -->
<!--            	<plugin>-->
<!--            		<artifactId>maven-gpg-plugin</artifactId>-->
<!--            		<version>1.1</version>-->
<!--           		</plugin>-->
           		
    		</plugins>
    	</pluginManagement>
    	
    	<plugins>
    	
            <plugin>
                <artifactId>maven-site-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-descriptor</id>
                        <goals>
                            <goal>attach-descriptor</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            
    	</plugins>
    </build>
    
    
